#cloud-config
users:
  - default 
  - name: vagrant
    groups: wheel
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    plain_text_passwd: vagrant
    ssh-authorized-keys:
      - ssh-rsa  vagrant insecure public key 
    lock_passwd: false

chpasswd:
  list: |
    root:vagrant
  expire: False

packages:
  - kernel-devel
  - kernel-headers
  - gcc
  - make
  - perl
  - bzip2
  - mod_ssl

runcmd:
  - sed -i 's/.*root:RANDOM/#&/g' /etc/cloud/cloud.cfg.d/99_onprem.cfg
  - ln -s /etc/system-release /etc/redhat-release
